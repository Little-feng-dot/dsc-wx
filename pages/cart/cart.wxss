@import '/iconfont/iconfont.wxss';

page {
  background-color: #f1f1f1;
}

.noCart {
  width: 98%;
  margin: 0 1%;
  border: 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 80rpx 0;
}

.noCart image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 0 20rpx;
}

.noCart .title {
  width: 100%;
  text-align: center;
  margin: 40rpx 0;
}

.noCart .other {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noCart .other view {
  padding: 20rpx;
  margin-right: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.header .icon-location {
  margin: 0 10rpx;
  text-indent: 10rpx;
}

.header .operation {
  color: #f00;
  margin-right: 20rpx;
}

.store-warp {
  width: 100%;
  /* display: flex;
  justify-content: flex-start;
  align-items: center; */
}

.store-warp .store {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.store-warp .store .checked {
  width: 70rpx;
  margin: 30rpx 0;
  text-align: center;
}

.icon-danxuanxuanzhong {
  color: #f00;
}

.store-warp .iconfont {
  font-size: 40rpx;
}

.store-warp .goods-warp {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: start;
  margin-bottom: 20rpx;
}

.store-warp .goods-warp .dele {
  width: 200rpx;
  height: 180rpx;
  line-height: 180rpx;
  text-align: center;
  background-color: #f00;
  color: #fff;
  margin-right: 20rpx;
}

.store-warp .goods-warp movable-view .movable {
  display: flex;
  justify-content: start;
  align-items: center;
}

.store-warp .goods-warp movable-view .movable .checked {
  text-align: center;
  width: 10%;
}

.store-warp .goods-warp movable-view .movable .goodsItem {
  width: 85%;
  background-color: #fff;
  padding: 10rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.store-warp .goods-warp movable-view .movable .goodsItem image {
  width: 140rpx;
  height: 140rpx;
  margin: 0 10rpx;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo {
  width: 75%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-left: 10rpx;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .title {
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  width: 460rpx;
  line-height: 40rpx;
  height: 80rpx;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other .price {
  color: #f00;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other .price::before {
  content: "￥";
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other .goodNum {
  width: 200rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #efefef;
  border-radius: 10rpx;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other .goodNum view {
  width: 33%;
  text-align: center;
  background-color: #efefef;
}

.store-warp .goods-warp movable-view .movable .goodsItem .goodinfo .other .goodNum .num {
  background-color: #fff;
}


.goods-guess {
  width: 100%;
  background-color: #efefef;
}

.goods-guess .header {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.goods-guess .header .line {
  width: 30rpx;
  height: 2px;
  background-color: #ccc;
  margin: 20rpx;
}

.goods-guess .goodsList {
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.goods-guess .goodsList .goodsList-item {
  width: 48%;
  margin: 1%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  border-radius: 20rpx;
  overflow: hidden;
  color: #333333;
  font-size: 24rpx;
}

.goods-guess .goodsList .goodsList-item image {
  width: 350rpx;
  height: 350rpx;
  margin: 0 0 10rpx 0;
}

.goods-guess .goodsList .goodsList-item .title {
  width: 90%;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.goods-guess .goodsList .goodsList-item .price::before {
  content: '￥';
  font-size: 24rpx;
}

.goods-guess .goodsList .goodsList-item .price {
  width: 90%;
  font-size: 28rpx;
  color: #f00;
  text-align: center;
  font-weight: bold;
  margin: 10rpx 0;
}

.noMore {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #ccc;
}


.footer {
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #efefef;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.footer .checked {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

.footer .checked view {
  margin-right: 10rpx;
}

.footer .priceInfo {
  width: 45%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  flex-direction: column;
  font-size: 28rpx;
  margin-right: 20rpx;

}

.footer .priceInfo .totalPrice text {
  color: #f00;
}

.footer .priceInfo .yf {
  color: #999;
}

.footer .toPay {
  width: 35%;
  text-align: center;
  background-color: #f00;
  color: #fff;
  height: 100rxp;
  line-height: 100rpx;
}